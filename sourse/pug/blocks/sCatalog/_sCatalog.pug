mixin filterItem(txt)
	+e.row-col.col-auto.d-none.d-sm-block
		+e.filter-item(href="#")=txt

mixin catalogSlide(data)
	.swiper-slide
		+e.item
			if data.discount
				+e.discount=data.discount
			if data.activeLike
				+e.like-btn.active(href="#")
					+icon('heart')
			else
				+e.like-btn(href="#")
					+icon('heart')
			+e.img(href="#")
				img.swiper-lazy(src="#" data-src=`img/@2x/catalog-item-${data.imgNum}.png` alt="")
			+e.name=data.nameTxt
			+e.descr=data.descr
			+e.price-cont
				if data.newPrice
					+e.price--new=data.newPrice
					+e.price--old=data.oldPrice
				else
					+e.price--common=data.oldPrice
			if data.grayTxt
				+e.gray
					span Inhalt:
					span=data.grayTxt
		//catalog-item-1