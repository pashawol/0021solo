	// end sProdNav

mixin prodNavBall(imgNum, txt)
	+e.ball-col.col-4
		+e.ball
			img(loading="lazy" src=`img/svg/prodNav-${imgNum}.svg` alt="")
		+e.ball-descr=txt

mixin prodNavItem(txt, hrefAtt)
	+e.l-col.col-12.col-sm-auto
		a(href=hrefAtt).ancor-js=txt