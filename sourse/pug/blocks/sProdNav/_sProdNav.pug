			+e.links-row.row
				+prodNavItem('Anwendung', '#')
				+prodNavItem('Beschreibung', '#sProdDescr')
				+prodNavItem('Technische Daten', '#sProdData')
				+prodNavItem('Download', '#sPDownload')
				+prodNavItem('Bewertung', '#sPFeedback')
				+prodNavItem('Ausstattung und Funktion', '#sPFunctionality')
			+e.baner
				+e.banner-bg
					img(loading="lazy" src="img/@2x/prodNav-baner.png" alt="")
				+e.b-row.row
					.col-12.col-sm-9.col-md-8.col-xl-6.col-xll-5.ms-auto
